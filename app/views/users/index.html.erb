<% if @users.present? %>
  <ul class='users-container'>
    <% @users.each do |user| %>
      <li>
        <%= link_to user_url(user) do %>
          <%= render partial: "users/user_info", locals: { user: user } %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No users found.</p>
<% end %>
